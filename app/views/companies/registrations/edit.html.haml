.wrapper
  = render partial: "layouts/header"
  .mypage
    .mypage__box
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :企業名, class: "signup-label"
          = f.text_field :name, autofocus: true, class: "textfield"
        .field
          = f.label :メールアドレス, class: "signup-label"
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "textfield"
        .field
          = f.label :現在のパスワード, class: "signup-label"
          = f.password_field :current_password, autocomplete: "current-password", class: "textfield"
        .field
          = f.label :新しいパスワード, class: "signup-label"
          %p (変更しない場合は空白のまま)
          = f.password_field :password, autocomplete: "new-password", class: "textfield"
        .field
          = f.label :新しいパスワード（確認）, class: "signup-label"
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "textfield"
        .mypage__box__btn
          = f.submit "変更する", class:"submit-btn"
  = render partial: "layouts/footer"
